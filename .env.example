# RAGDOC Environment Configuration
# Copy this file to .env and fill in your API keys

# ============================================================================
# REQUIRED API KEYS
# ============================================================================

# Voyage AI - Embedding Models
# Get your key at: https://www.voyageai.com/
# Used for: voyage-3-large (general), voyage-context-3 (long context)
VOYAGE_API_KEY=your_voyage_api_key_here

# Cohere - Reranking Model
# Get your key at: https://cohere.com/
# Used for: rerank-v3.5 (result reranking)
COHERE_API_KEY=your_cohere_api_key_here

# ============================================================================
# OPTIONAL API KEYS
# ============================================================================

# LlamaParse - PDF Parsing (Cloud)
# Get your key at: https://cloud.llamaindex.ai/
# Only needed if using LlamaParse backend (Docling is free alternative)
LLAMA_CLOUD_API_KEY=your_llama_cloud_api_key_here

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# ChromaDB Path (auto-detected, override if needed)
# CHROMA_DB_PATH=D:/Claude Code/ragdoc-mcp/chroma_db_new

# ChromaDB Collection Name (auto-detected, override if needed)
# COLLECTION_NAME=zotero_research_context_hybrid_v3

# ============================================================================
# DEBUGGING / DEVELOPMENT
# ============================================================================

# Enable debug logging
# DEBUG=false

# Disable GPU acceleration (for testing)
# NO_GPU=false
